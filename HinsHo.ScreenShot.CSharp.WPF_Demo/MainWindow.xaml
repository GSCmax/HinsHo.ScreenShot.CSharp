<Window x:Class="HinsHo.ScreenShot.CSharp.WPF_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HinsHo.ScreenShot.CSharp.WPF_Demo"
        mc:Ignorable="d"
        Title="ScreenShotDemoWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Screen Shot" Margin="5,5,0,0" Width="120" Click="Screen_Shot_Button_Click"/>
            <Button Content="Full Screen Shot" Margin="5,5,0,0" Width="120" Click="Full_Screen_Shot_Button_Click"/>
        </StackPanel>
        <Image Name="imgScreenShot" Grid.Row="1" Margin="5"/>
    </Grid>
</Window>
