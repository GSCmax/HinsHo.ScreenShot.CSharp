<Window x:Class="HinsHo.ScreenShot.CSharp.WPF_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HinsHo.ScreenShot.CSharp.WPF_Demo"
        mc:Ignorable="d"
        Title="DemoWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Take Screen Shot" Margin="5" Padding="3" Width="120" HorizontalAlignment="Left" Click="Button_Click"/>
        <Image Name="imgScreenShot" Grid.Row="1" Margin="5"/>
    </Grid>
</Window>
